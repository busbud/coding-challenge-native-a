<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="android:Theme.Holo.Light.NoActionBar">
    </style>
    <style name="AppTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:autoCompleteTextViewStyle">@style/ACText</item>
        <item name="android:dropDownListViewStyle">@style/NoDivider</item>
    </style>

    <style name="NoDivider" parent="@android:style/Widget.ListView">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0px</item>
    </style>


    <style name="Intro" parent="android:Widget.DeviceDefault.TextView">
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@drawable/f6cfe6ctextshadow</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:minHeight">?android:listPreferredItemHeightSmall</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="ACText" parent="android:Widget.DeviceDefault.AutoCompleteTextView">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/actext_bg</item>
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:minHeight">?android:listPreferredItemHeightSmall</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance.DeviceDefault">
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">#A0ADB7</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="Button" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">?android:listPreferredItemHeightSmall</item>
    </style>
</resources>
